@model List<Post>
<div class="container mt-4">
    <div class="row">
      <div class="col-lg-8">
      @foreach(var pst in Model)
      {
             <div class="post-card">
              <div class="post-header d-flex align-items-center">
            <img
              src="~/img/@pst.User.ImageFile"
              alt="User"
              class="me-2"
            />
            <div>
              <strong>@@@pst.User.UserName</strong>
              <p class="text-muted small mb-0">@pst.PublishedOn</p>
            </div>
          </div>
          <div class="post-image">
          <a href="/home/details/@pst.PostId">
            <img src="~/img/@pst.Image" alt="Post" />
            </a>
          </div>
          <div class="post-footer">
            <div class="d-flex align-items-center mb-2">
              <i class="bi bi-heart me-3 fs-4"></i>
              <i class="bi bi-chat me-3 fs-4"></i>
            </div>
            <p><strong>100 beğenme</strong></p>
            <p><strong>@@@pst.User.UserName</strong> @pst.Description</p>
          </div>
        </div>
      }
      </div>

      <div class="col-lg-4">
        <div class="sidebar">
  <div class="d-flex align-items-center mb-4 p-3 rounded-3 bg-light shadow-sm">
    <!-- Profil Fotoğrafı -->
    <img
      src="https://via.placeholder.com/50"
      alt="User"
      class="rounded-circle me-3 border border-2 border-primary"
      style="width: 50px; height: 50px;"
    />
    <div>
      <!-- Kullanıcı Adı ve Kullanıcı Bilgisi -->
      <strong class="d-block text-dark">User Name</strong>
      <p class="text-muted small mb-0">kullaniciadi</p>
    </div>
  </div>
</div>
        
      </div>
    </div>
  </div>