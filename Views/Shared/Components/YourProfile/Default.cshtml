@model UserProfileViewModel

<div class="card card-new p-4 shadow-sm d-flex align-items-center">
    <!-- Profil Kartı -->
    <div class="sidebar">
        <div class="d-flex flex-column align-items-center mb-4">
            <img
                src="~/img/@Model.User.ImageFile"
                alt="User"
                class="rounded-circle mb-3 border border-2 border-primary"
                style="width: 50px; height: 50px;"
            />
            <div class="text-center">
                <strong class="d-block text-dark">@Model.User.UserName</strong>
                <p class="text-muted small mb-0">@Model.User.UserName</p>
            </div>
        </div>
    </div>
<hr>
    <!-- Gönderiler -->
    <div class="posts w-100">
        <div class="d-flex flex-wrap justify-content-center">
            @foreach (var pst in Model.Posts)
            {
                <div class="m-2" style="width: 100px; height: 100px; overflow: hidden;">
                    <img
                        src="~/img/@pst.Image"
                        alt="Post"
                        class="post-img img-thumbnail"
                        style="width: 100%; height: 100%; object-fit: cover;"
                    />
                </div>
            }
        </div>
    </div>
</div>